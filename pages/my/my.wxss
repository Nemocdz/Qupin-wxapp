.task {
    background-color: white;
    margin-top: 4px;
    width: 100%;
    height: 180 rpx;
    align-items: center;
    position: relative;
}

.task-image {
    margin: 16px;
    width: 60px;
    height: 60px;
    background-color: #eeeeee;
}

.task-title {
    font-family: PingFangSC-Regular, serif;
    font-size: 16px;
    color: #4A4A4A;
}

.day {
    font-family: PingFangSC-Regular, serif;
    font-size: 12px;
    color: #FF1532;
    line-height: 17px;
}

.small-text {
    font-family: PingFangSC-Regular, serif;
    font-size: 12px;
    color: #000000;
    line-height: 17px;
}


.left {
    display: block;
    float: left;
}

.right {
    position: absolute;
    right: 30rpx;
    display: block;
    float: right;
}

.money {
    font-family: PingFangSC-Regular, serif;
    font-size: 16px;
    color: #FF1532;
}